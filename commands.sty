        %
        \path (0.1,0) edge[string/scaled={#1}{0.25}] (0.1,1);
        \node [enddot/scaled={#1}{0.25}] at (0.1,0) {};
        \node [enddot/scaled={#1}{0.25}] at (0.1,1) {};
    }
}

