% To draw enddot in diagrams
\tikzset{
    enddot/.style={
            circle,
            fill={#1},
            inner sep=0pt, % no inside-rectangle
            minimum size=5pt % min diameter 5pt
        },
    enddot/.default={black}
}

% Centers inline tikz to the text
\tikzset{
    vcenter/.style={
            baseline={([yshift=-.5ex]current bounding box.center)}
        },
}

